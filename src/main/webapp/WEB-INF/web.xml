<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">	
	<display-name>FoodieLoverService</display-name>
	
	
	<!-- 设定配置文件列表 ， 加载Spring配置文件 -->
	<!-- 指定Spring Bean的配置文件所在目录。默认配置在WEB-INF目录下 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- <param-value>classpath*:applicationContext.xml</param-value> -->
		<!-- 默认是/WEB-INF/applicationContext.xml -->
	    <param-value>classpath:applicationContext.xml</param-value>
	</context-param>

	<!-- 必要的配置就是指定servlet和listener -->
	
	<!-- Spring监听， 注册配置文件读取器，监听spring配置文件的变化 -->
	<listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
	
	<!-- spring mvc 配置 -->
	<servlet>
		<servlet-name>springDispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
			<!-- 自定义spring mvc的配置文件名称和路径 , 默认是/WEB-INF/[servlet名字]-servlet.xml -->
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- 设置dispatchservlet的匹配模式，通过把dispatchservlet映射到/，默认servlet会处理所有的请求，包括静态资源  -->
	<!-- spring mvc 请求后缀 -->
	<servlet-mapping>
		<servlet-name>springDispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- 字符集过滤器  -->
	<!-- 处理从页面传递中文到后台而出现的中文乱码问题 -->
	<!-- encoding start -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- encoding ends -->
	
	<filter>
    	<filter-name>CORSFilter</filter-name>
    	<filter-class>com.ibm.foodielover.filter.CORSFilter</filter-class>
  	</filter>
  	
  	<filter-mapping>
    	<filter-name>CORSFilter</filter-name>
    	<url-pattern>/rest/*</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>CORSFilter</filter-name>
    	<url-pattern>/FoodieLover/*</url-pattern>
  	</filter-mapping>
	
	<!-- 首页设置 -->
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
	
	
</web-app>
